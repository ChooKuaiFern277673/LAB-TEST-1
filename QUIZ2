package quiz2;

import java.util.Scanner;

public class Quiz2Bonus {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		System.out.println("PLEASE ENTER YOUR SALARY");
		int salary=sc.nextInt();
		System.out.println("YOUR SALARY: " + salary);
		
		System.out.println("ENTER YOUR YEAR OF SERVICE");
		int year = sc.nextInt();
		System.out.println("YEAR OF SERVICE" + year);
		
		if (year>5) {
			double bonus = salary*0.05;
			System.out.println("Bonus is : " + bonus);
			}
			else
				System.out.println("no bonus");
			double highestsalary = salary *1.05;
			double lowestsalary = salary *1.00;
			System.out.println("Highest salary : " + highestsalary);
			System.out.println("Lowest salary : " + lowestsalary);
	}

}

OUTPUT;
PLEASE ENTER YOUR SALARY
3000
YOUR SALARY: 3000
ENTER YOUR YEAR OF SERVICE
6
YEAR OF SERVICE6
Bonuss : 150.0
Highest salary : 3150.0
Lowest salary : 3000.0
